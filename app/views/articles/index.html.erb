
<h1>数学掲示板</h1>
<hr class="style-one">
    <% @articles.each do |article| %>
      <h2>
        <%= article.title %>
      </h2>
      <p>
        <%= article.name %>
        <%= article.updated_at.strftime "%Y年%m月%d日 %H:%M:%S" %>
      </p>
      <span1>
        <%= article.content %>
      </span1>
<hr class="style-one">
<% article.responses.each do |response| %>
      <p>
        <%= response.name %>
        <%= response.updated_at.strftime "%Y年%m月%d日 %H:%M:%S" %>
      </p>
      <div1>
        <%= response.content %>
      </div1>
      <hr class="style-one">
    <% end %>
    <div id='realtime'>プレビュ〜です</div>
<%= form_for(@response) do |f| %>
  <% if @response.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@response.errors.count, "error") %> prohibited this response from being saved:</h2>

      <ul>
      <% @response.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :name ,placeholder: "名前"%>
    <span3 class="actions">
    <%= f.submit :value =>"送信" %>
  </span3>
  </div>
  <div class="field">
    <%= f.text_area :content ,:size=>"60x4",:oninput=>'PreView()',placeholder: "内容..."%>
  </div>
  <div class="field" >
    <%= f.hidden_field :article_id, :value => article.id %>
  </div>
<% end %>
<% end %>
<%= link_to '新規作成', new_article_path %>


